<?xml version="1.0" encoding="utf-8"?>
<manifest
	package="eu.captag"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools">

	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

	<application
		android:name=".Captag"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/Theme.Captag"
		tools:ignore="AllowBackup">

		<activity
			android:name=".app.LoginActivity"
			android:screenOrientation="portrait">

			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>

		</activity>

		<activity
			android:name=".app.SignUpActivity"
			android:screenOrientation="portrait"/>

		<activity
			android:name=".app.lobby.GameSelectionActivity"
			android:screenOrientation="portrait"/>

		<activity
			android:name=".app.lobby.JoinTeamActivity"
			android:screenOrientation="portrait"/>

		<activity
			android:name=".app.lobby.TeamPagerActivity"
			android:screenOrientation="portrait"/>

	</application>

</manifest>
